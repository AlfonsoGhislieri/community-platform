rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false
    }

    match /v3_howtos/{slug} {
      allow read;
      allow create: if isSignedIn()
      allow update, delete: if
        isSignedIn() &&
        isOwnedByAuthenticatedUser()
    }

    match /research_rev20201020/{slug} {
      allow read;
    }

    match /v3_events/{slug} {
      allow read;
    }

    match /v3_mappins/{slug} {
      allow read;
    }

    match /v3_tags/{slug} {
      allow read;
    }

    match /v3_users/{slug} {
      allow read;
    }

    function isOwnedByAuthenticatedUser() {
      return 
        exists(/databases/$(database)/documents/v3_users/$(resource.data._createdBy))
        && get(/databases/$(database)/documents/v3_users/$(resource.data._createdBy)).data._authID == request.auth.uid
    }

    function isSignedIn() {
      return request.auth != null
    }
  }
}